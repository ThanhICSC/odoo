<?xml version="1.0"?>
<odoo>

    <record id="update_prm_invoicepolicy_wizard_form_view"  model="ir.ui.view">
        <field name="name">update.prm.invoicepolicy.form.view</field>
        <field name="model">update.prm.invoicepolicy</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="products" invisible="1"/>
                    <field name="invoice_policy"/>
                </group>
            </form>
        </field>
    </record>

    <record id="update_prm_invoicepolicy_action" model="ir.actions.act_window">
         <field name="name">Change Invoice Policy</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">update.prm.invoicepolicy</field>
         <field name="view_type">form</field>
         <field name="view_mode">form</field>
         <field name="view_id" ref="product_management_accounting.update_prm_invoicepolicy_wizard_form_view"/>
         <field name="target">new</field>
    </record>


</odoo>
