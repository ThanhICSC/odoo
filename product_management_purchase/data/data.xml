<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="product_template_add_vendor_wizard" model="ir.actions.server">
            <field name="name">Add products vendor</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">
action = env.ref("product_management_purchase.add_vendor_action").read()[0]
            </field>
        </record>

        <record id="product_template_update_purchase_method" model="ir.actions.server">
            <field name="name">Update purchase method</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">
action = env.ref("product_management_purchase.update_prm_purchase_policy_action").read()[0]
            </field>
        </record>

        <record id="product_template_update_pricedifference" model="ir.actions.server">
            <field name="name">Change price difference account</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">
action = env.ref("product_management_purchase.update_prm_pricedifferenceaccount_action").read()[0]
            </field>
        </record>

        <record id="product_template_make_purchase_ok" model="ir.actions.server">
            <field name="name">Make products purchasable</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="product.model_product_template" />
            <field name="state">code</field>
            <field name="code">
if records:
    records.write({"purchase_ok": True})
            </field>
        </record>

        <record id="product_template_disable_purchase_ok" model="ir.actions.server">
            <field name="name">Make products not purchasable</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="product.model_product_template" />
            <field name="state">code</field>
            <field name="code">
if records:
    records.write({"purchase_ok": False})
            </field>
        </record>

    </data>
</odoo>