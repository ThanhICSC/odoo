<?xml version="1.0"?>
<odoo>

    <record id="update_prm_optionalproducts_wizard_form_view"  model="ir.ui.view">
        <field name="name">update.prm.optionalproducts.form.view</field>
        <field name="model">update.prm.optionalproducts</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="products" invisible="1"/>
                    <field name="optional_to_add_ids" widget="many2many_tags"/>
                    <field name="optional_to_exclude_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>

    <record id="update_prm_optionalproducts_action" model="ir.actions.act_window">
         <field name="name">Update optional products</field>
         <field name="type">ir.actions.act_window</field>
         <field name="res_model">update.prm.optionalproducts</field>
         <field name="view_type">form</field>
         <field name="view_mode">form</field>
         <field name="view_id" ref="product_management.update_prm_optionalproducts_wizard_form_view"/>
         <field name="target">new</field>
    </record>


</odoo>
